<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateBeerFragment"
    android:orientation="vertical"
    android:background="#fadcc3"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a new beer"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edittext_createBeerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Name"
        android:inputType="text"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/edittext_createBeerStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Style"
        android:inputType="text"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/edittext_createBeerAbv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Abv"
        android:inputType="text"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/edittext_createBeerVolume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Volume"
        android:inputType="text"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/edittext_createBeerHowMany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="How many"
        android:inputType="text"
        android:maxLines="1"/>

    <Button
        android:id="@+id/button_createBeer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:backgroundTint="@color/black"/>

</LinearLayout>